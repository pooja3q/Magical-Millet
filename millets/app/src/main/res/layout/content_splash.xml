<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.poojaexample.millets.SplashActivity"
    tools:showIn="@layout/activity_splash">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@drawable/gradient_background"
        android:weightSum="1">

        <TextView
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MILLETS"
            android:layout_gravity="right"
            android:textColor="#04285e"
            android:textSize="40sp"
            android:layout_marginTop="7dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true" />


        <ImageView
            android:id="@+id/Image_app"
            android:layout_gravity="center"
            android:layout_width="305dp"
            android:src="@drawable/app_icon"
            android:layout_weight="0.54"
            android:layout_height="225dp" />
        <TextView
            android:id="@+id/t1"
            android:layout_marginBottom="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAGICAL"
            android:textColor="#04285e"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:textAlignment="center"
            android:id="@+id/text_t3"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:text="Know Your Millets"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@color/colorPrimary"
            style="@style/Base.TextAppearance.AppCompat.Headline"/>
        <TextView
            android:id="@+id/t3"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#fe02022e"
            android:text=" "
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/t4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="\n\nJAYA TRIPATHI"
            android:textStyle="bold"
            android:textColor="#f42b38"
            android:textSize="25sp"/>

    </LinearLayout>
</RelativeLayout>
